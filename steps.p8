pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
 x=60
 y=60
 sprite=1
 direction="right"
 tick=0
 pstate="idle"
end

function _update60()

 tick=tick+1
 
 if (pstate=="walking") then
  if (tick%15==0) then
   sprite=sprite+1
   if (sprite==3) then sprite=1 end
  end
 else
   sprite=1 
 end 
 
 if (btn(0)) then 
  x=x-0.5 
  pstate="walking"
  direction="left"
 elseif (btn(1)) then 
  x=x+0.5 
  pstate="walking"
  direction="right"
 elseif (btn(2)) then 
  pstate="walking"
  y=y-0.5
 elseif (btn(3)) then 
  pstate="walking"
  y=y+0.5 
 else 
  pstate="idle"
 end
 
end

function _draw()
 cls(0)
 spr(sprite,x,y,1,1,direction=="left")
end

