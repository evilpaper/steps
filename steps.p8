pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
 x=60
 y=60
 sprite=1
 direction="right"
 tick=0
end

function _update60()

 tick=tick+1
 
 if (tick%20==0) then
  sprite=sprite+1
  if (sprite==3) then sprite=1 end
 end 
 
 if (btn(0)) then 
  x=x-0.5 
  direction="left"
 end
 if (btn(1)) then 
  x=x+0.5 
  direction="right"
 end
 if (btn(2)) then y=y-0.5 end
 if (btn(3)) then y=y+0.5 end
 
end

function _draw()
 cls(0)
 spr(sprite,x,y,1,1,direction=="left")
end

